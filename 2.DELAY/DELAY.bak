#INCLUDE <16f887.h>
#USE DELAY(CLOCK=4000000)//4MHz
#FUSES XT,NOPROTECT,NOWDT,NOBROWNOUT,PUT,NOLVP
#DEFINE LED PORTB,0 //Puerto B RB0 se llama LED
#BYTE PORTB=6//Lugar de memoria puerto B

MAIN()
{
  SET_TRIS_B(0B11111110);
  WHILE(TRUE)
  {
    BIT_SET(LED);
    DELAY_MS(500);
    BIT_CLEAR(LED);
    DELAY_MS(500);
  }
}
